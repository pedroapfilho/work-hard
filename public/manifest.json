{
  "manifest_version": 2,
  "name": "Work Hard",
  "version": "0.4.4",
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "description": "Get things done, that's it.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/fun128.png",
    "default_title": "Work Hard"
  },
  "permissions": ["tabs", "<all_urls>", "storage"]
}
